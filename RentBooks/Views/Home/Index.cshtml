@model RentBooks.DTO.ListBooksDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="nivo-slider">
            <div class="slider-wrapper theme-default">
                <div id="nivoSlider" class="nivoSlider">
                    <img src="~/assets/img/slides/slide-1.jpg" data-thumb="~/assets/img/slides/slide-1.jpg" alt="" />
                    <a href="index.html"><img src="~/assets/img/slides/slide-1.jpg" data-thumb="~/assets/img/slides/slide-1.jpg" alt="" /></a>
                </div>
                <div id="htmlcaption" class="nivo-html-caption"></div>
            </div>
        </div>
    </div>
</div>
<div class="home-intro home-intro-compact bg-primary" id="home-intro">
    <div class="container">

        <div class="row align-items-center">
            <div class="col-lg-8">
                <p>
                    Leia quantos livros quiser. </br>
                    Alugue agora o seu livor na <span class="highlighted-word">Biblioteca Virtual</span>
                    <span>Pague por mês e leia quantos livros conseguir!.</span>
                </p>
            </div>
            <div class="col-lg-4">
                <div class="get-started text-left text-lg-right">
                    <a href="#" class="btn btn-dark btn-lg text-3 font-weight-semibold px-4 py-3">15 dias grátis</a>
                    <div class="learn-more">ou <a href="index.html">Leia mais.</a></div>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="masonry-loader masonry-loader-loaded">
    <div class="row products product-thumb-info-list" data-plugin-masonry="" data-plugin-options="{'layoutMode': 'fitRows'}" style="position: relative; height: 726px;">
        @foreach (var book in Model.books)
        {
            <div class="col-12 col-sm-6 col-lg-3 product" style="position: absolute; left: 0px; top: 0px;">
                <span class="product-thumb-info border-0">
                    <a href="shop-cart.html" class="add-to-cart-product bg-color-primary">
                        <span class="text-uppercase font-weight-bold text-1">Alugar</span>
                    </a>
                    <a href="shop-product-sidebar-left.html">
                        <span class="product-thumb-info-image">
                            <img alt="" class="img-fluid" src="~/assets/img/books/@book.IDBook-.jpg">
                        </span>
                    </a>
                    <span class="product-thumb-info-content product-thumb-info-content pl-0 bg-color-light">
                        <a href="shop-product-sidebar-left.html">
                            <h4 class="text-4 text-primary">@book.NMBook</h4>
                            <span class="price">
                                <ins><span class=" text-dark font-weight-light">@book.NMAutor</span></ins>
                            </span>
                        </a>
                    </span>
                </span>
            </div>
        }



    </div>
    <div class="row">
        <div class="col">
            <ul class="pagination float-right">
                <li class="page-item"><a class="page-link" href="#"><i class="fas fa-angle-left"></i></a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <a class="page-link" href="#"><i class="fas fa-angle-right"></i></a>
            </ul>
        </div>
    </div>
    <div class="bounce-loader"><div class="bounce1"></div><div class="bounce2"></div><div class="bounce3"></div></div>
</div>



